<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Editing Campground: <%= campground.title %></h1>
  <div class="col-6 offset-3">
    <div class="mb-3">
      <form
        action="/campgrounds/<%= campground.id %>?_method=PUT"
        method="POST"
      >
        <div class="mb-3">
          <label for="title" class="form-label"> Title </label>
          <input
            type="text"
            name="campground[title]"
            class="form-control"
            id="title"
            value="<%= campground.title %>"
          />
        </div>
        <div class="mb-3">
          <label for="location" class="form-label"> Location </label>
          <input
            type="text"
            name="campground[location]"
            id="location"
            value="<%= campground.location %>"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"> Image URL </label>
          <input
            type="text"
            name="campground[image]"
            id="image"
            class="form-control"
            value="<%= campground.image %>"
          />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              class="form-control"
              id="price"
              placeholder="0.00"
              aria-label="price"
              aria-describedby="price-label"
              name="campground[price]"
              value="<%= campground.price %>"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"> Description </label>
          <textarea
            id="description"
            class="form-control"
            name="campground[description]"
          >
          <%=campground.description %></textarea
          >
        </div>
        <button type="" class="btn btn-info">Update Campground</button>
      </form>
    </div>
    <a href="/campgrounds/<%= campground._id %>" class="btn btn-warning"
      >Back to Campground</a
    >
  </div>
</div>
